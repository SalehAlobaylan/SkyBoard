{
  "name": "skyboard",
  "version": "1.0.0",
  "description": "SkyBoard - A modern task management application",
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .js,.jsx src/",
    "lint:fix": "eslint --ext .js,.jsx src/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,scss,json}\"",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "serve": "serve -s build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalehAlobaylan/SkyBoard.git"
  },
  "keywords": [
    "react",
    "firebase",
    "task-management",
    "oauth"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SalehAlobaylan/SkyBoard/issues"
  },
  "homepage": ".",
  "dependencies": {
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.1.0",
    "express": "^4.18.2",
    "firebase": "^9.22.0",
    "formik": "^2.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "react-scripts": "5.0.1",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "serve": "^14.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss,json,md}": [
      "prettier --write"
    ]
  }
}
